{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node"],
    "lib": ["ESNext"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "vite.config.ts",
    "src/types/**/*.d.ts",
    "src/vite-env.d.ts",
    "src/lib/supabaseClient.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
